<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_measures"
            tools:context=".dataentry.presentation.DataEntryFragment">

            <TextView
                android:id="@+id/text_data_entry_addresses"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Define start and finish"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_text_data_entry_starting_point"
                android:layout_width="@dimen/no_measure"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:drawableStart="@drawable/ic_my_location_black_24dp"
                android:drawablePadding="@dimen/one_measure"
                android:hint="Starting point"
                android:inputType="textPostalAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_data_entry_addresses" />


            <EditText
                android:id="@+id/edit_text_data_entry_destination"
                android:layout_width="@dimen/no_measure"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:drawableStart="@drawable/ic_place_black_24dp"
                android:drawablePadding="@dimen/one_measure"
                android:hint="Destination"
                android:inputType="textPostalAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_data_entry_starting_point" />

            <TextView
                android:id="@+id/text_data_entry_shafts"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:text="Number of truck shafts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_data_entry_destination" />

            <SeekBar
                android:id="@+id/seek_bar_data_entry_truck_shaft"
                android:layout_width="@dimen/no_measure"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:max="9"
                android:progress="2"
                app:layout_constraintEnd_toStartOf="@+id/text_data_entry_shaft_number_display"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_data_entry_shafts" />

            <TextView
                android:id="@+id/text_data_entry_shaft_number_display"
                android:layout_width="@dimen/three_measures"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/seek_bar_data_entry_truck_shaft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seek_bar_data_entry_truck_shaft" />

            <TextView
                android:id="@+id/text_data_entry_average_consumption"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:text="Average fuel consumption (km/L)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seek_bar_data_entry_truck_shaft" />

            <EditText
                android:id="@+id/edit_text_data_entry_average_consumption"
                android:layout_width="@dimen/no_measure"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:drawableStart="@drawable/ic_local_gas_station_black_24dp"
                android:drawablePadding="@dimen/one_measure"
                android:hint="Average consumption"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_data_entry_average_consumption" />

            <TextView
                android:id="@+id/text_data_entry_fuel_price"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:text="Diesel price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_data_entry_average_consumption" />

            <EditText
                android:id="@+id/edit_text_data_entry_fuel_price"
                android:layout_width="@dimen/no_measure"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:drawableStart="@drawable/ic_attach_money_black_24dp"
                android:drawablePadding="@dimen/one_measure"
                android:hint="Diesel price"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_data_entry_fuel_price" />

            <Button
                android:id="@+id/button_calculate_route"
                android:layout_width="@dimen/no_measure"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_measures"
                android:backgroundTint="@color/colorPrimary"
                android:text="Calculate route"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_data_entry_fuel_price"
                app:layout_constraintVertical_bias="1.0" />

            <FrameLayout
                android:id="@+id/container_loading_wheel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <ProgressBar
                    android:id="@+id/loading_wheel"
                    android:layout_width="@dimen/six_measures"
                    android:layout_height="@dimen/six_measures"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_round_borders" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
